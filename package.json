{
  "name": "tally-ai-desktop",
  "version": "1.0.0",
  "description": "Tally AI Assistant Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.tallyai.expert",
    "productName": "Tally AI Expert",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "package.json",
      "dist/tally-ai-backend/**/*"
    ],
    "win": {
      "target": "portable"
    }
  },
  "dependencies": {
    "electron": "^33.0.0"
  },
  "devDependencies": {
    "electron-builder": "^26.7.0"
  }
}